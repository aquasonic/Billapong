<Window x:Class="Billapong.GameConsole.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Billapong" Height="300" Width="300">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="mapCanvas" Background="White" MouseDown="MapCanvas_OnMouseDown"
                Grid.Column="1" HorizontalAlignment="Stretch" MaxWidth="300" MaxHeight="300"></Canvas>
    </Grid>
</Window>
