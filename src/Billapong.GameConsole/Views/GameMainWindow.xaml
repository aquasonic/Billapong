<Window x:Class="Billapong.GameConsole.Views.GameMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:Billapong.GameConsole.ViewModels"
        xmlns:view="clr-namespace:Billapong.GameConsole.Views"
        xmlns:windowSelection="clr-namespace:Billapong.GameConsole.ViewModels.WindowSelection"
        Title="Billapong" Height="{Binding WindowHeight}" MinHeight="{Binding WindowHeight}" MaxHeight="{Binding WindowHeight}" Width="{Binding WindowWidth}" MinWidth="{Binding WindowWidth}" MaxWidth="{Binding WindowWidth}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:GameMenuViewModel}">
            <view:GameMenu />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:MapSelectionViewModel}">
            <view:MapSelection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type windowSelection:WindowSelectionViewModelBase}">
            <view:WindowSelection />
        </DataTemplate>
    </Window.Resources>
    
    <ContentControl Content="{Binding CurrentView}" />
</Window>
