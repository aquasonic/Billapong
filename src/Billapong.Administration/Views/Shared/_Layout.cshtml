<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - Billapong</title>
    <link href="@Url.Content("~/Styles/main.css")" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="logo @string.Format(@ViewBag.IsLogin == true ? "center" : string.Empty)">
        <a href="~/">
            <pre>
 ____ ___ _     _        _    ____   ___  _   _  ____
| __ )_ _| |   | |      / \  |  _ \ / _ \| \ | |/ ___|
|  _ \| || |   | |     / _ \ | |_) | | | |  \| | |  _ 
| |_) | || |___| |___ / ___ \|  __/| |_| | |\  | |_| |
|____/___|_____|_____/_/   \_\_|    \___/|_| \_|\____|
            </pre>
        </a>
    </div>

    <div class="wrapper">
        @if (ViewBag.IsLogin != true)
        {
            <div class="navigation">
                <ul id="nav">
                    <li>@Html.MenuLink(@Global.HomeTitle, "Index", "Home")</li>
                    <li>@Html.MenuLink(@Global.GamesTitle, "Index", "Game")</li>
                    <li>@Html.MenuLink(@Global.TracingTitle, "Index", "Tracing")</li>
                    <li>@Html.MenuLink(@Global.HighScoresTitle, "Index", "HighScore")</li>
                    <li>@Html.MenuLink(@Global.LogoutTitle, "Logout", "Authentication")</li>
                </ul>
            </div>
        }

        <div class="content @string.Format(@ViewBag.IsLogin == true ? "logincontent" : string.Empty)">
            <h1>@ViewBag.Title</h1>

            @RenderBody()
        </div>
    </div>
    
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>

</body>
</html>
